# WhisPay Configuration

# Application Settings
APP_NAME=WhisPay
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Voice Biometrics
VOICE_BIOMETRIC_THRESHOLD=0.85
VOICE_SAMPLE_RATE=16000
VOICE_CHANNELS=1

# Emotion Detection
EMOTION_CONFIDENCE_THRESHOLD=0.7
STRESS_DETECTION_ENABLED=True

# Trust Mode Settings
ADAPTIVE_TRUST_ENABLED=True
BACKGROUND_NOISE_THRESHOLD=0.3
HIGH_RISK_ENVIRONMENT_DETECTION=True

# Transaction Limits
DEFAULT_TRANSACTION_LIMIT=10000
HIGH_VALUE_THRESHOLD=25000
REQUIRE_REVERIFICATION_ABOVE=25000

# Private Mode
PRIVATE_MODE_ENABLED=True
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Integration (optional)
WHATSAPP_ENABLED=False
WHATSAPP_API_KEY=your_whatsapp_api_key

# Database
DATABASE_URL=sqlite:///./data/whispay.db
DATABASE_ECHO=False

# NLP Models
INTENT_MODEL=bert-base-uncased
EMOTION_MODEL=distilbert-base-uncased
USE_GPU=False

# Speech Recognition
SPEECH_RECOGNITION_ENGINE=google
SPEECH_LANGUAGE=en-IN
SPEECH_TIMEOUT=5
SPEECH_PHRASE_TIME_LIMIT=10

# Text-to-Speech
TTS_ENGINE=pyttsx3
TTS_RATE=150
TTS_VOLUME=0.9
TTS_VOICE=female

# Predictive Features
ENABLE_PREDICTIONS=True
PREDICTION_LOOKBACK_DAYS=90
MONTHLY_SUMMARY_DAY=1
RECURRING_TRANSACTION_THRESHOLD=3

# Evaluation Metrics
COLLECT_METRICS=True
COLLECT_FEEDBACK=True
METRICS_EXPORT_PATH=./data/metrics/

# Cache
CACHE_ENABLED=True
CACHE_TTL_SECONDS=300

# Logging
LOG_FILE=./logs/whispay.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days
